{
	"compilerOptions": {
		"noImplicitAny": true,
		"moduleResolution": "node",
		"module": "esnext",
		"target": "es6",
		"allowJs": false,
		"strict": true,
		"sourceMap": true,
		"outDir": "./dist/",
		"declaration": true,
		"typeRoots": ["node_modules/@types"]
	},
	"include": [
		"src"
	],
	"ts-node": {
		"compilerOptions": {
			"module": "esnext",
			"moduleResolution": "node",
			"allowSyntheticDefaultImports": true
		}
	}
}
